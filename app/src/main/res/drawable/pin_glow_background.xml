<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer glow/shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="48dp" />
            <solid android:color="#40E50914" />
        </shape>
    </item>
    
    <!-- Middle glow -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="44dp" />
            <solid android:color="#60E50914" />
        </shape>
    </item>
    
    <!-- Inner border -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <stroke
                android:width="2dp"
                android:color="@color/netflix_red" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    
</layer-list>
