<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/accent_red" />
            <solid android:color="#20E50914" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#333333" />
            <solid android:color="#1A1A1A" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
